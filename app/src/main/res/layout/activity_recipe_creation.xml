<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RecipeCreationActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include android:id="@+id/toolbar" layout="@layout/toolbar"/>

        <EditText
                android:hint="@string/recipe_name"
                android:inputType="textMultiLine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_small"
                android:paddingStart="@dimen/spacing_small"
                android:paddingEnd="@dimen/spacing_small"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/font_larger"
                android:fontFamily="@font/circular_std_bold"
                android:id="@+id/recipeEditTextName" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/recipePictureHolder"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        <TextView
                android:text="@string/recipe_instructions"
                android:textSize="@dimen/font_large"
                android:fontFamily="@font/circular_std_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/recipeTextViewInstructions"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/addIngredientButton"/>
        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="151dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
                android:id="@+id/recipePictureHolder"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"
                android:adjustViewBounds="false" android:cropToPadding="false"
                android:background="@color/cardview_dark_background"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:hint="@string/recipe_description"
                android:id="@+id/recipeEditTextDescription" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recipeTextViewDescription"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:inputType="textMultiLine"/>
        <TextView
                android:text="@string/recipe_description"
                android:fontFamily="@font/circular_std_bold"
                android:textSize="@dimen/font_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/recipeTextViewDescription"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/recipeEditTextName"/>
        <TextView
                android:text="@string/recipe_ingredients"
                android:fontFamily="@font/circular_std_bold"
                android:textSize="@dimen/font_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:id="@+id/recipeTextViewIngredients"
                app:layout_constraintTop_toBottomOf="@+id/recipeEditTextDescription" android:layout_marginTop="24dp"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recipeTextViewInstructions"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/instructionsRecyclerView">
        </android.support.v7.widget.RecyclerView>
        <Button
                android:text="@string/add_instruction"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addInstructionButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/instructionsRecyclerView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="@string/add_ingredient"
                android:textAllCaps="false"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/addIngredientButton"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ingredientsRecyclerView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recipeTextViewIngredients"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/ingredientsRecyclerView">
        </android.support.v7.widget.RecyclerView>
        <Button
                android:background="@drawable/ic_check_green"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:textSize="@dimen/font_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/createRecipeButton" android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/addInstructionButton"
                style="@style/Widget.AppCompat.Button.Borderless" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>